<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mt_2016.marathon_blood">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".Services.groupChatNotificationService"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name=".Services.PostBloodService"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name=".Services.Chat_Notification"
            android:enabled="true"
            android:exported="false" />

        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity
            android:name=".Activities.Welcome_for_User"
            android:label="@string/title_activity_welcome_for__user"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Activities.PostActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.Welcome_for_User" />
        </activity>
        <activity android:name=".Activities.CommitActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.Welcome_for_User" />
            />
        </activity>
        <activity
            android:name=".Activities.ConversationActivity"
            android:launchMode="singleTask" />
        <activity android:name=".Activities.GroupCreate" />
        <activity
            android:name=".Activities.Group_coversation"
            android:launchMode="singleTask" />
        <activity
            android:name=".Activities.UserProfile"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.ConversationActivity" />
        </activity>
        <activity
            android:name=".Activities.GroupProfile"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.Group_coversation" />
        </activity>
        <activity
            android:name=".Activities.ProfileActivity"
            android:parentActivityName=".Activities.Welcome_for_User" />
        <activity android:name=".Activities.ChangePassword" />
        <activity android:name=".Activities.AddParticipents"></activity>
    </application>

</manifest>