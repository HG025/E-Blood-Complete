<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/g_sendername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="name"
        android:textSize="12dp"
        android:textStyle="bold"
        android:textColor="#6aa320"/>
    <TextView
        android:id="@+id/g_mesages_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:background="@drawable/rightmessageview"
        android:hint="message"
        android:padding="10dp"
        android:layout_alignParentLeft="true"
        android:gravity="left|center_vertical"
        android:visibility="visible"

        />
    <TextView
        android:id="@+id/time_g_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:hint="time"
        android:layout_alignParentLeft="true"
        android:gravity="left|center_vertical"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/g_for_file_view"
        android:layout_below="@+id/mesages_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:padding="10dp"
        android:background="@drawable/rightmessageview"
        android:layout_alignParentLeft="true"
        android:gravity="left|center_vertical"
        android:layout_marginTop="15dp"
        android:visibility="gone"

        />


</LinearLayout>
