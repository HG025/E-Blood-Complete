<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="20dp"
    tools:context="com.example.mt_2016.marathon_blood.Activities.ProfileActivity">
    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ProgressBar
        android:id="@+id/progre"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true" />
    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/profile_image"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        app:civ_border="true"
        app:civ_border_width="25dp"
        app:civ_border_color="@color/gray"
         />
    </RelativeLayout>
   <EditText
    android:layout_marginTop="5dp"
    android:id="@+id/p_email"
    android:hint="name will show here"
    android:layout_width="match_parent"
    android:background="@drawable/buttonpost"
    android:paddingLeft="10dp"
    android:layout_height="40dp"
    />

    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/p_name"
        android:hint="name will show here"
        android:layout_width="match_parent"
        android:background="@drawable/buttonpost"
        android:paddingLeft="10dp"
        android:layout_height="40dp"
        />

    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/p_country"
        android:layout_width="match_parent"
        android:background="@drawable/buttonpost"
        android:paddingLeft="10dp"
        android:layout_height="40dp"  />

    <EditText
        android:id="@+id/p_city"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:background="@drawable/buttonpost"
        android:paddingLeft="10dp"
        android:layout_height="40dp"  />

    <EditText
        android:id="@+id/p_gender"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttonpost"
        android:paddingLeft="10dp"
        android:layout_height="40dp"  />

    <EditText
        android:id="@+id/p_bldgrp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:background="@drawable/buttonpost"
        android:paddingLeft="10dp"
        android:layout_height="40dp"  />
    <Button
        android:id="@+id/updateButton"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="update Info"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:background="@drawable/rightmessageview"
        />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
